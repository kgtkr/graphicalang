{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        // TODO: NodeNext (https://github.com/gcanti/fp-ts/issues/1726)
        "moduleResolution": "Node",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": [
        "src"
    ]
}
